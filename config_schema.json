{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable or disable the Olympic Medal Count plugin."
    },
    "display_options": {
      "type": "object",
      "properties": {
        "view_mode": {
          "type": "string",
          "enum": ["top5", "usa_only"],
          "default": "top5",
          "description": "Display mode: 'top5' scrolls through the top N countries, 'usa_only' shows only USA medal counts."
        },
        "scroll_speed": {
          "type": "number",
          "default": 2.0,
          "minimum": 0.1,
          "maximum": 5.0,
          "description": "Pixels to move per scroll step (lower = smoother)."
        },
        "scroll_delay": {
          "type": "number",
          "default": 0.05,
          "minimum": 0.001,
          "maximum": 1.0,
          "description": "Seconds between scroll steps (lower = faster)."
        },
        "target_fps": {
          "type": "integer",
          "default": 120,
          "minimum": 30,
          "maximum": 200,
          "description": "Target frames per second for smooth scrolling."
        }
      },
      "additionalProperties": false
    },
    "data_settings": {
      "type": "object",
      "properties": {
        "update_interval": {
          "type": "integer",
          "default": 300,
          "minimum": 60,
          "maximum": 3600,
          "description": "How often (in seconds) to fetch fresh data from the API."
        },
        "cache_ttl": {
          "type": "integer",
          "default": 300,
          "minimum": 60,
          "maximum": 3600,
          "description": "Cache time-to-live in seconds for API responses."
        },
        "top_n_countries": {
          "type": "integer",
          "default": 5,
          "minimum": 3,
          "maximum": 10,
          "description": "Number of top countries to display in Top N mode."
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
